# Database Configuration
# For local development:
DATABASE_URL=postgresql://pguser:pgpass@localhost:5432/swasthsaathi_db
MONGO_URI=mongodb://localhost:27017/swasthsaathi_mongo

# For production (MongoDB Atlas):
# Get your MongoDB Atlas connection string from: https://cloud.mongodb.com
# Replace <username>, <password>, and <cluster-url> with your actual values
# Example: mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/swasthsaathi?retryWrites=true&w=majority
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/swasthsaathi?retryWrites=true&w=majority

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=devsecret

# AES-256 Encryption Key (32 bytes, base64 encoded)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=MTIzNDU2Nzg5MDEyMzQ1Njc4OTAxMjM0NTY3ODkwMTI=

# Server Configuration
PORT=8082
FRONTEND_ORIGIN=http://localhost:5173

# ============================================================
# TWILIO SMS/OTP CONFIGURATION
# ============================================================
# Get credentials from: https://www.twilio.com/console
# Set MOCK_OTP=false to enable real SMS
MOCK_OTP=true
#TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
#TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
#TWILIO_FROM=+1234567890

# ============================================================
# GOOGLE CALENDAR INTEGRATION (OPTIONAL)
# ============================================================
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8081/api/calendar/oauth-callback

